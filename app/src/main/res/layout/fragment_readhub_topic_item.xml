<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="4dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"

            android:layout_marginTop="8dp"
            android:textColor="@color/text_title"
            android:textSize="18sp"
            tools:text="微软 Q1 云计算业务高速增长，Windows 最赚钱，PC 软件生态日益糟糕" />

        <com.github.deskid.focusreader.widget.ReadMoreTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/text_sub"
            android:textSize="14sp"
            app:trimCollapsedText="@string/show_all_content"
            app:trimExpandedText="@string/hide_content"
            tools:text="北京时间 10 月 27 日早间消息，2015 年，微软 CEO 萨提亚 · 纳德拉（Satya Nadella）曾经立下誓言，他将带领这家老迈的科技先锋重塑自我，优先发展云计算业务 ... 他当时还承诺将把云计算营收扩大为当时的 3 倍，到 2018 年实现 200 亿美元的年化营收 ... 微软刚刚发布的第一财季业绩显示，该公司已经超出了年化 200 亿美元的目标。" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#b9b9b9" />

            <TextView
                android:id="@+id/instant_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_btn_bg"
                android:gravity="center_vertical"
                android:padding="4dp"
                tools:text="即时读"
                android:textColor="@color/colorGray" />

            <TextView
                android:id="@+id/publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorGray"
                tools:text="1小时前" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_expand_more_black_24dp"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>